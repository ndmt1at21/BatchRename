<UserControl x:Class="AddSuffixRule.AddSuffixComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ct="clr-namespace:BRControl;assembly=BRControl"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddSuffixRule"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="White">
        <TextBlock VerticalAlignment="Center">Add suffix:</TextBlock>
        <ct:BRInputText
            Name="tbInputSuffix"
            Margin="0,5,0,0"
            VerticalAlignment="Center"
            Placeholder="Suffix"
            Text="{Binding Suffix, Mode=OneWay}"
            TextChanged="tbInputSuffix_TextChanged"/>


        <CheckBox Content="Append to original filename" />
    </StackPanel>
</UserControl>
