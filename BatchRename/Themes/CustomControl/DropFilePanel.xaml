<UserControl x:Class="BatchRename.Themes.CustomControl.DropFilePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BatchRename.Themes.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Name="DragDropPanel" Drop="DragDrop_Function" AllowDrop="True" RadiusX="12" RadiusY="12"  Stroke="Black" StrokeDashArray="6,6">
            <Rectangle.Fill>
                <ImageBrush ImageSource="../../Assets/img/dropfile.jpg"></ImageBrush>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
