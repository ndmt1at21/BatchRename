<UserControl
    x:Class="BatchRename.Themes.CustomControl.LogoWithSaveState"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ct="clr-namespace:BatchRename.Themes.CustomControl"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">

    <StackPanel
        Orientation="Horizontal"
        VerticalAlignment="Center">

        <ContentControl
            Height="{DynamicResource LogoHeightTitleBar}"
            Content="{DynamicResource AppLogoIcon}" />

        <StackPanel
            Margin="2,0,0,0"
            VerticalAlignment="Center">
            <TextBlock
                Style="{DynamicResource Subtitle}"
                Foreground="{DynamicResource TextPrimaryColor}">
                Batch Rename
            </TextBlock>

            <TextBlock
                Style="{DynamicResource Small}"
                Text="{Binding SaveState, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ct:LogoWithSaveState}}}" />
        </StackPanel>
    </StackPanel>
</UserControl>