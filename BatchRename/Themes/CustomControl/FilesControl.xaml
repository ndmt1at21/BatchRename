<UserControl
    x:Class="BatchRename.Themes.CustomControl.FilesControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ct="clr-namespace:BatchRename.Themes.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Style="{DynamicResource H1}">Files</TextBlock>

        <Border
            Margin="0,10,0,0"
            Padding="{DynamicResource PaddingXLargeYMedium}"
            Background="{DynamicResource SurfaceColor}"
            CornerRadius="{DynamicResource Radius}"
            DockPanel.Dock="Left">

            <StackPanel>
                <TextBlock Style="{DynamicResource H3}">
                    Actions
                </TextBlock>

                <ct:RuleAction />
            </StackPanel>
        </Border>

    </DockPanel>
</UserControl>
