<Window x:Class="BatchRename.View.RuleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRename.View"
        xmlns:ct="clr-namespace:BatchRename.Themes.CustomControl"
        mc:Ignorable="d"
        Title="RuleWindow" Height="350" Width="500"
        WindowStyle="None"        
        Background="Transparent"
        AllowsTransparency="True">



    <Border Background="{DynamicResource BackgroundColor}"
            CornerRadius="10">
        <StackPanel Orientation="Vertical">
            <ct:WindowCommandButtons Height="30" />
            
                <StackPanel Width="497" Background="{DynamicResource BackgroundColor}" Height="362" >

                    <TabControl Name="Feature" Height="320" >
                        <TabItem Header="Insert" Width="80" />
                        <TabItem Header="Remove"   Width="80"/>
                        <TabItem Header="Strip"  Width="80"/>
                        <TabItem Header="Extension" Width="80"/>
                        <TabItem Header="Regular Expression"/>
                        </TabControl>
                    
                </StackPanel>             

           
        </StackPanel>
    </Border>
</Window>
