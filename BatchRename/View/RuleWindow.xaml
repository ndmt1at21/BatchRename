<Window x:Class="BatchRename.View.RuleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRename.View"
        xmlns:ct="clr-namespace:BatchRename.Themes.CustomControl"
        mc:Ignorable="d"
        Title="RuleWindow" Height="350" Width="500"
        WindowStyle="None"        
        Background="Transparent"
        AllowsTransparency="True">



    <Border Background="{DynamicResource BackgroundColor}"
            CornerRadius="10">
        <StackPanel Orientation="Vertical">
            <ct:WindowCommandButtons Height="30" />
            <StackPanel Orientation="Horizontal">
                <StackPanel Width="160" Background="{DynamicResource TextSmallColor}" Height="362" >

                    <RadioButton Content="Insert"
                                 Height="30"                             
                                 FontSize="14"   
                                 Style="{DynamicResource LeftRuleMenuButton}"
                                 />

                    <RadioButton Content="Remove"
                                 Height="30"                             
                                 FontSize="14"
                                 Style="{DynamicResource LeftRuleMenuButton}"
                                 />
                    <RadioButton Content="Strip"
                                 Height="30"                             
                                 FontSize="14"
                                 Style="{DynamicResource LeftRuleMenuButton}" Checked="RadioButton_Checked"
                                 />
                    <RadioButton Content="Extension"
                                 Height="30"                             
                                 FontSize="14"
                                 Style="{DynamicResource LeftRuleMenuButton}"
                                 />
                    <RadioButton Content="Regular Expression"
                                 Height="30"                             
                                 FontSize="14"
                                 Style="{DynamicResource LeftRuleMenuButton}"
                                 />
                </StackPanel>
                <StackPanel Background="{DynamicResource TextSmallColor}" Width="320" Height="362" Margin="10 0 10 0"/>

            </StackPanel>
        </StackPanel>
    </Border>
</Window>
