<UserControl
    x:Class="AddPrefixRule.AddPrefixComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ct="clr-namespace:BRControl;assembly=BRControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AddPrefixRule"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Background="White">
        <TextBlock VerticalAlignment="Center">Add prefix:</TextBlock>
        <ct:BRInputText
            Name="tbInputPrefix"
            Margin="0,5,0,0"
            VerticalAlignment="Center"
            Placeholder="Prefix"
            Text="{Binding Prefix, Mode=OneWay}"
            TextChanged="tbInputPrefix_TextChanged"/>


        <CheckBox Content="Append to original filename" />
    </StackPanel>
</UserControl>
