<UserControl x:Class="RegularExpressions.RegularExpressionComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RegularExpressions" xmlns:ct="clr-namespace:BRControl;assembly=BRControl"
			 mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<StackPanel Background="White">
		<TextBlock VerticalAlignment="Center">Regular expression</TextBlock>

		<ct:BRInputText
            Name="tbInputRegex"
            Margin="0,3,0,0"
            VerticalAlignment="Center"
            Placeholder="Regex"
            Text="{Binding Regex,
                           Mode=OneWay}"
            TextChanged="tbInputRegex_TextChanged" />
	</StackPanel>
</UserControl>
